{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "types": ["@angular/localize"],
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@portfolio-v2/admin": ["libs/admin/src/index.ts"],
      "@portfolio-v2/const": ["libs/const/index.ts"],
      "@portfolio-v2/environment": [
        "apps/portfolio-v2/src/environments/index.ts"
      ],
      "@portfolio-v2/interfaces": ["libs/interfaces/index.ts"],
      "@portfolio-v2/portfolio-pages": ["libs/pages/src/index.ts"],
      "@portfolio-v2/shared/components": [
        "libs/shared/src/lib/components/index.ts"
      ],
      "@portfolio-v2/shared/pipes": [
        "libs/shared/src/lib/pipes/index.ts"
      ],
      "@portfolio-v2/shared/services": [
        "libs/shared/src/lib/services/index.ts"
      ],
      "@portfolio-v2/shared/validators": [
        "libs/shared/src/lib/validators/index.ts"
      ],
      "@portfolio-v2/state": ["libs/state/src/index.ts"],
      "@portfolio-v2/state/dataModels": [
        "libs/state/src/lib/data-models/index.ts"
      ],
      "@portfolio-v2/state/selectors": ["libs/state/src/lib/selectors/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
