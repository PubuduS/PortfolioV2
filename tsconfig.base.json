{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@portfolio-v2/about_me": [
        "libs/portfolio_functions/about_me/src/index.ts"
      ],
      "@portfolio-v2/certifications": [
        "libs/portfolio_functions/certifications/src/index.ts"
      ],
      "@portfolio-v2/contact": [
        "libs/portfolio_functions/contact/src/index.ts"
      ],
      "@portfolio-v2/cover_letter": [
        "libs/portfolio_functions/cover_letter/src/index.ts"
      ],
      "@portfolio-v2/education": [
        "libs/portfolio_functions/education/src/index.ts"
      ],
      "@portfolio-v2/experience": [
        "libs/portfolio_functions/experience/src/index.ts"
      ],
      "@portfolio-v2/featured_projects": [
        "libs/portfolio_functions/featured_projects/src/index.ts"
      ],
      "@portfolio-v2/interfaces/certificate": [
        "libs/interfaces/certificate_display/ICertificateCard"
      ],
      "@portfolio-v2/landing_banner": [
        "libs/portfolio_functions/landing_banner/src/index.ts"
      ],
      "@portfolio-v2/portfolio": [
        "libs/portfolio_functions/portfolio/src/index.ts"
      ],
      "@portfolio-v2/skills": ["libs/portfolio_functions/skills/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
